<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>

 <!-- evaluate the users email -->
      <h1><%= `${user.email}'s profile` %></h1>

      <hr>

      <h2> Latest Posts</h2>

      <ul class="list-unstyled">

 <!-- check if there are posts for the user -->
        <% if(posts) { %>
          <% posts.forEach((post) => { %>
 <!-- if there are posts, build a list for each and link to the posts show view -->
            <li>
              <a href="/topics/<%= post.topicId %>/posts/<%= post.id %>">
                <%= post.title %>
              </a>
            </li>
          <% }) %>
        <% } %>
      </ul>
      <hr>

      <h2> Latest Comments</h2>

      <ul class="list-unstyled">

 <!-- check if there are comments for the user -->
        <% if(comments) { %>
          <% comments.forEach((comment) => { %>

 <!-- if there are, build a list for each and link to the comments show view -->
            <li>
              <span>Post: </span><a href="/topics/<%= comment.Post.topicId %>/posts/<%= comment.Post.id %>">
                <%= comment.Post.title %>
              </a>
              <p>Comment: <%= comment.body %></p>
            </li>
            <hr>
          <% }) %>
        <% } %>
      </ul>

      <h2>Favorites</h2>
      <ul class="list-unstyled">
        <% if(favorites) { %>
          <% favorites.forEach((favorite) => { %>
            <li>
              <span>Favorited Post: </span><a href="/topics/<%= favorite.Post.topicId %>/posts/<%= favorite.Post.id %>">
                <%= favorite.Post.title %>
              </a>
            </li>
            <hr>
          <% }) %>
        <% } %>
      </ul>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
